    "googleFonts": [
      "Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500",
      "Source+Sans+3:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400",
